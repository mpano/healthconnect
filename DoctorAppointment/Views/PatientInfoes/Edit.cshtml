@using System.Web;
@using Microsoft.AspNetCore.Http;

@model DoctorAppointment.Models.PatientInfo


@{
    ViewData["Title"] = "Edit";
    var Getrole = Context.Session.GetString("Role");
    if (Getrole == "Patient")
    {

        Layout = "~/Views/Shared/Medicr_PatientLayout.cshtml";

    }
    else if (Getrole == "Doctor")
    {
        Layout = "~/Views/Shared/Medicr_DoctorLayout.cshtml";
    }
    else if (Getrole == "Admin")
    {
        Layout = "~/Views/Shared/_AdminLayout.cshtml";
    }

    else
    {
        Layout = "~/Views/Shared/Medicr_Index.cshtml";
    }
